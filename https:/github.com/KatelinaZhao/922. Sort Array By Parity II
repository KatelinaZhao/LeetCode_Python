# 2 <= nums.length <= 2 * 104
# nums.length is even.
# Half of the integers in nums are even.
# 0 <= nums[i] <= 1000


class Solution:
    def sortArrayByParityII(self, nums):
        output = []
        even = []
        odd = []
        l = len(nums)
        # 2 <= nums.length <= 2 * 104
        # nums.length is even.
        if len(nums) % 2 == 0 and len(nums) in range(2,208):
            for i in range(l):
                # 0 <= nums[i] <= 1000
                if nums[i] < 0 or nums[i] > 1000:
                    print(False)
                elif nums[i] % 2 == 0:
                    even = even + [nums[i]]
                else:
                    odd = odd + [nums[i]]
            # Half of the integers in nums are even.
            if len(even) == l/2:
                for i in range(int(l/2)):
                    output = output + [even[i]]
                    output = output + [odd[i]]
            else:
                print(False)
            return output
        else:
            print(False)




# Test
nums_1 = [4,2,5,7]

S = Solution()
S.sortArrayByParityII(nums_1)
